.item-box {
  display: flex;
  width: 100%;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #fbfbfb;
}
.item-box .left {
  width: 290rpx;
  height: 160rpx;
  position: relative;
  margin-right: 20rpx;
}
.item-box .left ._img {
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
}
.item-box .left .item-time {
  position: absolute;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.2);
  padding: 3rpx 8rpx;
  border-radius: 15rpx;
  font-size: 14rpx;
  right: 0;
  color: #fff;
}
.item-box .right {
  justify-content: space-between;
  height: 80px;
  padding-top: 2px;
  padding-left: 2px;
}
.item-box .right .right-title {
  max-width: 182px;
  height: 35px;
  line-height: 17px;
  font-size: 14px;
  font-weight: 700;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  white-space: normal;
}
.item-box .right .info .nickname {
  font-size: 12rpx;
  color: #9e9e9e;
}
.item-box .right .info .count {
  display: flex;
  align-items: center;
}
.item-box .right .info .count .money {
  color: #fb6932;
  width: 65px;
  font-size: 14px;
}
.item-box .right .info .count .iconfont {
  font-size: 11px;
  color: #222;
}

