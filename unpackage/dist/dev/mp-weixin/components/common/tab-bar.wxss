.tab-bar {
  width: 100%;
  height: 80rpx;
  background-color: #FFFFFF;
  border-bottom: 1px solid #efeff4;
}
.tab-bar .bar-view {
  width: 100%;
  text-align: center;
}
.tab-bar .bar-view .bar-item {
  flex: 1;
  font-size: 30rpx;
  line-height: 80rpx;
  position: relative;
}
.tab-bar .bar-view .bar-item:after {
  position: absolute;
  content: '';
  width: 0;
  height: 0;
  border-bottom: 6rpx solid #007aff;
  border-radius: 20rpx;
  left: 50%;
  bottom: 6rpx;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  transition: .3s;
}
.tab-bar .bar-view .current {
  color: #007aff;
}
.tab-bar .bar-view .current:after {
  width: 60rpx;
}

