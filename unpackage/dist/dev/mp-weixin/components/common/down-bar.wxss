page {
  height: 100%;
}
.classifyBox {
  height: 100%;
  display: flex;
}
.classifyBox .left {
  width: 200rpx;
  height: 100%;
  background-color: #f8f9fb;
  position: relative;
}
.classifyBox .left .title {
  height: 150rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #8c8c8c;
}
.classifyBox .left .active {
  color: #365fc2;
  font-weight: 900;
}
.classifyBox .left .active:before {
  content: "";
  width: 4rpx;
  height: 60rpx;
  background-color: #365fc2;
  position: absolute;
  left: 0rpx;
  transition: .5s;
}
.classifyBox .right {
  display: flex;
  flex: 1;
}
.classifyBox .right .tag {
  display: inline-block;
  width: 160rpx;
  height: 70rpx;
  margin: 30rpx 10rpx 0 10rpx;
  border: 1px solid #dadada;
  font-size: 28rpx;
  border-radius: 30rpx;
  line-height: 70rpx;
  text-align: center;
}

