.list-box {
  margin-top: 50rpx;
}
.list-box .title {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.list-box .center {
  margin-bottom: 10rpx;
}
.list-box .center .name {
  font-size: 38rpx;
  font-weight: 500;
  color: #303133;
  margin-right: 10rpx;
}
.list-box .center .word {
  font-size: 20rpx;
  border-radius: 30rpx 30rpx 30rpx 0;
  padding: 0 10rpx;
  color: #fff;
  background-image: linear-gradient(to right, #fc9d7b, #fa1c14);
}
.list-box .all {
  color: #b2b8bd;
}

